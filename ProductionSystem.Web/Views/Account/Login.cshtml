@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>Login</title>
</head>
<body>
    <h2>Login</h2>
    <form method="post">
        <label>Account:</label>
        <input type="text" name="account" required /><br />
        <label>Password:</label>
        <input type="password" name="password" required /><br />
        <button type="submit">Login</button>
    </form>

    @if (ViewBag.Error != null)
    {
        <p style="color:red">@ViewBag.Error</p>
    }
</body>
</html>