@{
    ViewData["Title"] = "로그인";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-box">
    <div style="text-align:center; margin-bottom:20px;">
        <img src="~/images/cayemarkS.png" alt="로고" style="max-width: 150px; height: auto;" />
    </div>
    <h2 style="text-align:center; color:#333; margin-bottom:30px;">생산 관리 시스템 로그인</h2>

    <form method="post">
        <div class="form-group" style="margin-bottom: 20px;">
            <label for="account" style="font-weight:bold; display:block;">아이디 (Account)</label>
            <input type="text" name="account" id="account" style="width:100%; padding:10px; border:1px solid #ccc; border-radius:6px;" required />
        </div>
        <div class="form-group" style="margin-bottom: 20px;">
            <label for="password" style="font-weight:bold; display:block;">비밀번호 (Password)</label>
            <input type="password" name="password" id="password" style="width:100%; padding:10px; border:1px solid #ccc; border-radius:6px;" required />
        </div>
        <button type="submit" style="width:100%; padding:10px; background:#0078D7; color:white; font-weight:bold; border:none; border-radius:6px; cursor:pointer;">
            로그인
        </button>
    </form>

    @if (ViewBag.Error != null)
    {
        <p style="color:red; text-align:center; margin-top:15px;">@ViewBag.Error</p>
    }
</div>
